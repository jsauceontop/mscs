<% provide(:title, "Topics") %>
<h1>Suggest a new topic</h1>
<div class="row">
  <div class="span8 offset4">
	<%= form_for(@topic) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<table>
		<tr><td><b>Title</b></td></tr>
		<tr><td><%= f.text_field(:title) %></td></tr>
		<tr><td><b>Description</b></td></tr>
		<tr><td><%= f.text_field(:description) %></td></tr>
	</table>
	<%= f.submit "Submit Topic Suggestion", class: "btn btn-primary" %>
	<% end %>
  </div>
</div>

