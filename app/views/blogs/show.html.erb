<% @page_title = "Blogs" %>

<div class="row">
	<aside class="span8 offset2">
		<section>
			<h1><%= @blog.title %></h1>
			<br /><%= @blog.content %>
		</section>

		<% if current_user?(@blog.user) %>
			<%= link_to("edit", {:controller => 'blogs', :action => 'edit', :id=> @blog.id}) %>
			/
			<%= link_to "delete", {:controller => 'blogs', :action => 'delete', :id=> @blog.id}, data: {confirm: "You sure?"}, title: @blog.title %>
		<% end %>
	</aside>

</div>

