<% provide(:title, @user.username) %>

<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.firstname %> 
				<%= @user.lastname %>
			</h1>
			<% if !@user.location.nil? %>
				<b>Located:</b> <%= @user.location %>
			<% end %>
			<p />
			<% if !@user.relatedMentor.nil? %>
				<b>Mentor:</b> <%= @user.relatedMentor %>
			<% end %>
			<br />
			<% if @user.isMentor == true %>
				Mentor
				<!--show related topics here -->
				<p /><b>Topics Mentoring in:</b>
				<% if @user.topics.any? %>
					<table>
						<% @user.topics.each do |t| %>
						<tr><td><%=t.title %></td></tr>
						<% end %>
					</table>
				<% else %>
					N/A
				<% end %>
			<% else %>
				Not a Mentor
			<% end %>
		</section>
	</aside>
</div>
	<div class="span8">
		<% if @user.blogs.any? %>
			<h3> Blog Posts (<%= @user.blogs.count %>)</h3>
			<ol class="blogs">
				<%= render @blogs %>
			</ol>
			<%= will_paginate @blogs %>
		<% end %>
	</div>
</div>
<%= link_to "Edit", edit_user_path(current_user), class: "btn btn-primary" %>
