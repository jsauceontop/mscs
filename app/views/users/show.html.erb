<% provide(:title, @user.username) %>

<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.firstname %> 
				<%= @user.lastname %>
			</h1>
		</section>
	</aside>
</div>
	<div class="span8">
		<% if @user.blogs.any? %>
			<h3> Blog Posts (<%= @user.blogs.count %>)</h3>
			<ol class="blogs">
				<% @blogs.each do |blog| %>
					<%= render "blogs/blog", :blog => blog %>
				<% end %>
			</ol>
			<%= will_paginate @blogs %>
		<% end %>
	</div>
</div>
