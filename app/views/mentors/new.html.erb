<% provide(:title, "Mentors") %>
<h1>Become a Mentor</h1>

<%= form_tag mentors_path do %>
	<%= render 'shared/error_messages', object: @user %>
	<table>
		<tr>
			<th>Location</th>
			<td><%= select_tag :location, options_for_select(us_states) %> </td>
		</tr>
		<tr>
			<th>Topics</th>
			<td></td>
		</tr>
		<% @topics.each do |t| %>
		<tr>
			<td></td>
			<td><%= check_box_tag "topic_ids[]", t.id, false, :id => "topic_ids_#{t.id}" %><%= t.title %></td>
		</tr>
		<% end %>
	</table>
	<%= submit_tag "Submit", class: "btn btn-primary" %>
<% end %>

